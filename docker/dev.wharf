---
dockerfile: |
  FROM phusion/baseimage:0.9.19

  RUN apt-get update && apt-get install -y \
      sudo \
      ant \
      default-jdk \
      python3-venv \
      gcc \
      python3-pip

  ENTRYPOINT ["/docker/entrypoint"]

name: wharf
hostname: "{{ name }}"

image:
  repository: "naz/{{ name }}"
  tag: v1-dev

volumes:
  - ../:/workspace