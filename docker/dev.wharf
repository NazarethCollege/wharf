---
dockerfile: |
  FROM naz/baseimage:v1

  # Get newest package list
  RUN apt-get update

  # Install base packages for development
  RUN apt-get install -y \
      sudo \
      ant \
      default-jdk \
      python3-venv \
      gcc

  ENTRYPOINT ["/docker/entrypoint"]

image:
  repository: naz/wharf
  tag: v1-dev

name: wharf
hostname: wharf

network:
  name: docker0
  ipv4_address: 172.18.0.2
  aliases:
    - wharf

port_mappings:
  - host: 8080
    container: 80

volumes:
  - ../:/workspace